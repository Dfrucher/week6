<h1>New Theater</h1>


<%= form_tag('/theaters', method: 'post') do %>


  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

    <div>
    <%= label_tag :address %><br />
    <%= text_field_tag :address %>
  </div>


  <div>
    <%= submit_tag "Create Theater" %>
  </div>
<% end %>
